# ZENO Personal AI Assistant - Environment Configuration
# Copy this file to .env and customize the values

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Optional: OpenAI API Key (for fallback when local models unavailable)
# OPENAI_API_KEY=sk-your-openai-key-here

# Optional: Groq API Key (alternative fallback)
# GROQ_API_KEY=your-groq-key-here

# Speech Recognition Settings
STT_MODEL=vosk-model-small-en-us-0.15
WAKE_WORD=zeno
WAKE_WORD_THRESHOLD=0.7

# AI Model Preferences
DEFAULT_LOCAL_MODEL=phi
FALLBACK_LOCAL_MODEL=tinyllama

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434

# Memory and Learning
ENABLE_MEMORY=True
MAX_MEMORY_ENTRIES=1000

# PC Control Security
ENABLE_PC_CONTROL=True

# Text-to-Speech Engine
TTS_ENGINE=pyttsx3